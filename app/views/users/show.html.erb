<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1 class="my-3"><%=current_user.first_name.capitalize%> 'profile page</h1>
    </div>
  </div>

  <div class="row flex-row">
    <div class="col-md-6">
      <h2>My informations</h2>
        <p><h4>First Name :</h4><%=current_user.first_name%> <%=current_user.last_name%><br></p>
        <p><h4>Email :</h4><%=current_user.email%></p>
      <br><br>
      <br><%= link_to "Edit my informations", edit_user_path(current_user), :method => 'get', class: "btn btn-info"%><br><br>
    </div>
    <div class="col-md-4">
      <%if @user.avatar.attached?%>
      <%= image_tag @user.avatar, alt: 'avatar' %>
      <%else%>
       <img class="card-img-top" src="https://cdn.pixabay.com/photo/2017/06/13/12/53/profile-2398782_960_720.png" width="50px">
      
    <%end%>
     <%= form_tag user_avatars_path(current_user.id), multipart: true do %>
        <div class="form-group">
          <%= file_field_tag :avatar, class: 'btn btn-warning btn-sm' %>
          
        </div>
        <div class="form-group">
          <%= submit_tag "Update profil", class: 'btn btn-secondary btn-sm' %>
          
        </div>
      <%end%>
    <div>


      
    </div>
  </div>
</div>
